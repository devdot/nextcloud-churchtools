{
	"name": "devdot/nextcloud-churchtools",
	"description": "Improve integration with your ChurchTools instance beyond the available OAuth2 SSO. Manage group folders, update stale users",
	"license": "AGPL-3.0-or-later",
	"authors": [
		{
			"name": "Thomas Kuschan",
			"email": "mail@thomaskuschan.de"
		}
	],
	"autoload": {
		"psr-4": {
			"OCA\\ChurchToolsIntegration\\": "lib/"
		}
	},
	"scripts": {
		"post-install-cmd": [
			"@composer bin all install --ansi"
		],
		"post-update-cmd": [
			"@composer bin all update --ansi"
		],
		"lint": "find . -name \\*.php -not -path './vendor/*' -not -path './vendor-bin/*' -not -path './build/*' -print0 | xargs -0 -n1 php -l",
		"cs:check": "php-cs-fixer fix --dry-run --diff",
		"cs:fix": "php-cs-fixer fix",
		"psalm": "psalm --threads=1 --no-cache",
		"test:unit": "phpunit tests -c tests/phpunit.xml --colors=always --fail-on-warning --fail-on-risky",
		"openapi": "generate-spec"
	},
	"require": {
		"php": "^8.1",
		"5pm-hdh/churchtools-api": "^2.1",
		"bamarni/composer-bin-plugin": "^1.8"
	},
	"require-dev": {
		"nextcloud/ocp": "dev-stable30",
		"roave/security-advisories": "dev-latest"
	},
	"config": {
		"allow-plugins": {
			"bamarni/composer-bin-plugin": true
		},
		"optimize-autoloader": true,
		"sort-packages": true,
		"platform": {
			"php": "8.1"
		}
	}
}
